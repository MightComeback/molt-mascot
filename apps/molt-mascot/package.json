{
  "name": "@molt/mascot",
  "version": "0.1.33",
  "private": true,
  "description": "A tiny always-on-top desktop mascot (pixel lobster) that reflects your local Clawdbot Gateway state.",
  "author": "Might <might@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MightComeback/molt-mascot.git",
    "directory": "apps/molt-mascot"
  },
  "main": "src/electron-main.cjs",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "capture": "mkdir -p ../../assets/screenshots && MOLT_MASCOT_CAPTURE_DIR=../../assets/screenshots electron ."
  },
  "dependencies": {
    "electron": "^30.0.0"
  },
  "devDependencies": {
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.mightcomeback.molt-mascot",
    "productName": "Molt Mascot",
    "artifactName": "molt-mascot-${version}.${ext}"
  },
  "keywords": [
    "electron",
    "mascot",
    "clawdbot",
    "pixel-art",
    "ai",
    "agent"
  ]
}
