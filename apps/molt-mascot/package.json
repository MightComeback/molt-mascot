{
  "name": "@molt/mascot",
  "version": "0.1.42",
  "private": true,
  "description": "A tiny always-on-top desktop mascot (pixel lobster) that reflects your local OpenClaw Gateway state.",
  "author": "Ivan Kuznetsov <kuznetsovivan496@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MightComeback/molt-mascot.git",
    "directory": "apps/molt-mascot"
  },
  "main": "src/electron-main.cjs",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "capture": "mkdir -p ../../assets/screenshots && MOLT_MASCOT_CAPTURE_DIR=../../assets/screenshots electron ."
  },
  "dependencies": {
    "@molt/mascot-plugin": "workspace:*",
    "electron": "^30.0.0"
  },
  "devDependencies": {
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.mightcomeback.molt-mascot",
    "productName": "Molt Mascot",
    "artifactName": "molt-mascot-${version}-${os}-${arch}.${ext}",
    "files": [
      "src/**/*",
      "package.json",
      "!src/**/*.test.*",
      "!test/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] },
        { "target": "zip", "arch": ["arm64", "x64"] }
      ],
      "darkModeSupport": true
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        { "target": "AppImage", "arch": ["x64", "arm64"] },
        { "target": "deb", "arch": ["x64", "arm64"] }
      ]
    }
  },
  "keywords": [
    "electron",
    "mascot",
    "clawdbot",
    "pixel-art",
    "ai",
    "agent"
  ]
}
