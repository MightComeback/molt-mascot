{
  "name": "molt-mascot",
  "description": "A tiny always-on-top desktop mascot (pixel lobster) that reflects your local OpenClaw Gateway state.",
  "author": "Ivan Kuznetsov <kuznetsovivan496@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.7",
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "bun run --cwd packages/molt-mascot-plugin dev & bun run --cwd apps/molt-mascot dev",
    "mascot": "bun run --cwd apps/molt-mascot dev",
    "screenshots": "bun run --cwd apps/molt-mascot capture",
    "ws:dump": "bun tools/ws-dump.ts",
    "ws:watch": "bun tools/ws-dump.ts --watch --compact",
    "ws:health": "bun tools/ws-dump.ts --health",
    "ws:ping": "bun tools/ws-dump.ts --ping",
    "ws:state": "bun tools/ws-dump.ts --state",
    "ws:reset": "bun tools/ws-dump.ts --reset",
    "build": "bun run --cwd packages/molt-mascot-plugin build",
    "build:plugin": "bun run --cwd packages/molt-mascot-plugin build",
    "dist": "bun run build && bun run --cwd apps/molt-mascot dist",
    "test": "bun test packages/molt-mascot-plugin/test apps/molt-mascot/test",
    "typecheck": "bun run --cwd packages/molt-mascot-plugin typecheck",
    "lint": "oxlint .",
    "format": "bun x biome check --apply .",
    "format:check": "bun x biome check .",
    "check": "bun run lint && bun run format:check && bun run typecheck && bun run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MightComeback/molt-mascot.git"
  },
  "bugs": {
    "url": "https://github.com/MightComeback/molt-mascot/issues"
  },
  "homepage": "https://github.com/MightComeback/molt-mascot#readme",
  "devDependencies": {
    "oxlint": "^1.50.0"
  },
  "license": "MIT"
}
