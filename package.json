{
  "name": "@mightcomeback/molt-mascot",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.7",
  "scripts": {
    "dev": "bun --cwd packages/molt-mascot-plugin run dev & bun --cwd apps/molt-mascot run dev",
    "mascot": "bun --cwd apps/molt-mascot run dev",
    "screenshots": "bun --cwd apps/molt-mascot run capture",
    "ws:dump": "bun tools/ws-dump.ts",
    "lint": "oxlint .",
    "format": "bun x biome check --apply ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MightComeback/molt-mascot.git"
  },
  "bugs": {
    "url": "https://github.com/MightComeback/molt-mascot/issues"
  },
  "homepage": "https://github.com/MightComeback/molt-mascot#readme",
  "devDependencies": {
    "oxlint": "^1.42.0"
  },
  "version": "0.0.1"
}
