{
  "name": "molt-mascot",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.7",
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "bun run --cwd packages/molt-mascot-plugin dev & bun run --cwd apps/molt-mascot dev",
    "mascot": "bun run --cwd apps/molt-mascot dev",
    "screenshots": "bun run --cwd apps/molt-mascot capture",
    "ws:dump": "bun tools/ws-dump.ts",
    "test": "bun test packages/molt-mascot-plugin/test apps/molt-mascot/test",
    "lint": "oxlint .",
    "format": "bun x biome check --apply ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MightComeback/molt-mascot.git"
  },
  "bugs": {
    "url": "https://github.com/MightComeback/molt-mascot/issues"
  },
  "homepage": "https://github.com/MightComeback/molt-mascot#readme",
  "devDependencies": {
    "oxlint": "^1.43.0"
  },
  "license": "MIT"
}
