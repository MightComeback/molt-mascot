{
  "id": "@molt/mascot-plugin",
  "name": "Molt Mascot",
  "version": "0.1.36",
  "description": "OpenClaw plugin for Molt Mascot (pixel mascot)",
  "main": "dist/index.js",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "idleDelayMs": {
        "type": "number",
        "default": 800,
        "minimum": 0,
        "description": "Milliseconds to wait before reverting to idle state"
      },
      "errorHoldMs": {
        "type": "number",
        "default": 5000,
        "minimum": 0,
        "description": "Milliseconds to hold the error state before clearing"
      },
      "alignment": {
        "type": "string",
        "default": "bottom-right",
        "description": "Screen alignment for the mascot window",
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right",
          "top-center",
          "bottom-center",
          "center-left",
          "center-right",
          "center"
        ]
      },
      "clickThrough": {
        "type": "boolean",
        "default": false,
        "description": "Enable click-through mode (ghost mode) so the mascot doesn't intercept mouse clicks"
      },
      "hideText": {
        "type": "boolean",
        "default": false,
        "description": "Hide the text status pill (pixel-only mode)"
      },
      "padding": {
        "type": "number",
        "default": 24,
        "minimum": 0,
        "description": "Padding from screen edges (pixels)"
      },
      "opacity": {
        "type": "number",
        "default": 1,
        "minimum": 0,
        "maximum": 1,
        "description": "Window opacity (0.0 - 1.0)"
      },
      "size": {
        "type": "string",
        "default": "medium",
        "description": "Mascot window size preset",
        "enum": [
          "small",
          "medium",
          "large",
          "xlarge"
        ]
      }
    }
  }
}
